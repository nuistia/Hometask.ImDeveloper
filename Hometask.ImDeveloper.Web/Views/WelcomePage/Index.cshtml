@{
    ViewData["Title"] = "Home Page";
}

@model Hometask.ImDeveloper.Web.Models.WelcomePageForm

<style>
    .text-input {
        width: 250px;
        padding: 4px;
        font-size: 14px;
    }

    .field-container {
        margin: 15px;
        text-align: left;
        display: inline-block;
    }

    .validation-message {
        color: red;
        font-size: 12px;
        margin-top: 4px;
        display: block;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>

    @using (Html.BeginForm("Result", "WelcomePage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="field-container">
            @Html.LabelFor(m => m.Name)
            <br />
            @Html.TextBoxFor(m => m.Name, new { @class = "text-input" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "validation-message" })
        </div>

        <br/>

        <div class="field-container">
            @Html.LabelFor(m => m.Email)
            <br />
            @Html.TextBoxFor(m => m.Email, new { @class = "text-input" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-message" })
        </div>

        <br />
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">
            Become a developer
        </button>
    }
</div>
